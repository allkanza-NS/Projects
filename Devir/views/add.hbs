<h3>Добавить новую услугу</h3>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Название услуги</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>

    <div class="input-field">
        <input id="text" name="text" type="text" class="validate" required  value="{{course.text}}">
        <label for="text">Текст</label>
        <span class="helper-text" data-error="Введите текст"></span>
    </div>

    <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required>
    <label for="img">URL картинки</label>
    <span class="helper-text" data-error="Введите url картинки"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-primary">Добавить услугу</button>
</form><br><br>